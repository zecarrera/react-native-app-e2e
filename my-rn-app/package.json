{
  "name": "my-rn-app",
  "main": "expo-router/entry",
  "license": "0BSD",
  "version": "1.0.0",
  "scripts": {
    "start": "npx expo start",
    "android": "npx expo start --android",
    "ios": "npx expo start --ios",
    "web": "npx expo start --web",
    "test": "jest --watchAll",
    "e2e:start:metro": "npx expo start --dev-client",
    "e2e:build:android": "npx expo prebuild && cd android && ./gradlew assembleDebug",
    "e2e:test:android": "npx wdio run wdio.android.conf.js",
    "e2e:test:ios": "npx wdio run wdio.ios.conf.js",
    "e2e:build:ios": "npx expo prebuild && cd ios && xcodebuild -workspace myrnapp.xcworkspace -scheme myrnapp -configuration Debug -sdk iphonesimulator -derivedDataPath build",
    "e2e:emulator:android": "emulator -avd Pixel_9a -no-snapshot-load & adb wait-for-device",
    "e2e:simulator:ios": "xcrun simctl boot 'iPhone 16 Pro' || true",
    "detox:build:android": "npx expo prebuild && detox build --configuration android.emu.debug",
    "detox:test:android": "detox test --configuration android.emu.debug",
    "detox:test:ios": "detox test --configuration ios.sim.debug"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-navigation/native": "^7.1.6",
    "expo": "~53.0.15",
    "expo-font": "~13.3.2",
    "expo-linking": "~7.1.6",
    "expo-router": "~5.1.2",
    "expo-splash-screen": "~0.30.9",
    "expo-status-bar": "~2.2.3",
    "expo-system-ui": "~5.0.9",
    "expo-web-browser": "~14.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.4",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5",
    "serve": "^14.2.4"
  },
  "devDependencies": {
    "@appium/images-plugin": "^3.1.3",
    "@babel/core": "^7.25.2",
    "@types/react": "~19.0.10",
    "@wdio/appium-service": "^9.16.2",
    "@wdio/cli": "^9.16.2",
    "@wdio/local-runner": "^9.16.2",
    "@wdio/mocha-framework": "^9.16.2",
    "@wdio/spec-reporter": "^9.16.2",
    "appium": "^2.19.0",
    "appium-espresso-driver": "^4.1.13",
    "appium-uiautomator2-driver": "^4.2.4",
    "appium-xcuitest-driver": "^9.9.1",
    "chai": "^5.2.0",
    "detox": "^20.39.0",
    "jest": "^29.2.1",
    "jest-circus": "^30.0.3",
    "jest-expo": "~53.0.8",
    "react-test-renderer": "19.0.0",
    "typescript": "~5.8.3"
  },
  "private": true
}
